{
  "env": {
    "browser": true,
    "es2021": true
  },
  "settings": {
    "import/core-modules": ["electron"]
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["/gen", "/lib/interpreter/parser.js"],
  "rules": {
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "max-len": [
      "error",
      { "code": 100, "comments": 80, "ignorePattern": "TODO" }
    ],
    "no-console": ["error", { "allow": ["error"] }],
    "max-classes-per-file": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never",
        "jsx": "never",
        "mjs": "never"
      }
    ]
  },
  "reportUnusedDisableDirectives": true
}
